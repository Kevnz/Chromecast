{
    "root": true,
    "env": {
        "node": true,
        "mocha": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "document": true,
        "log": true,
        "logRequest": true,
        "__SRC__": true,
        "React": true,
        "ReactDOM": true,
        "ReactBootstrap": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "arrowFunctions": true,
            "blockBindings": true,
            "classes": true,
            "defaultParams": true,
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true,
            "objectLiteralShorthandMethods": true,
            "objectLiteralShorthandProperties": true,
            "restParams": true,
            "superInFunctions": true,
            "templateStrings": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "comma-spacing": [2, {"before": false, "after": true}],
        "curly": [2, "all"],
        "generator-star-spacing": [2, {"before": true, "after": false}],
        "dot-notation": [2, {"allowKeywords": true}],
        "guard-for-in": 2,
        "eqeqeq": [2, "smart"],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "linebreak-style": [2, "unix"],
        "new-cap": 0,
        "no-bitwise": 2,
        "no-unused-vars": 2,
        "no-caller": 2,
        "no-const-assign": 2,
        "no-empty": 0,
        "no-eval": 2,
        "no-extra-semi": 2,
        "no-loop-func": 0,
        "no-mixed-spaces-and-tabs": 2,
        "no-new": 2,
        "no-trailing-spaces": [2, { "skipBlankLines": false }],
        "no-undef": 2,
        "no-undef-init": 2,
        "no-undefined": 2,
        "no-use-before-define": [2, "nofunc"],
        "no-unused-expressions": 2,
        "no-var": 2,
        "semi": [2, "always"],
        "quotes": [2, "single", "avoid-escape"],
        "wrap-iife": [2, "inside"]
    }
}